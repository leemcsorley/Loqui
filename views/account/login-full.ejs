<div class="container">
    <% if (errors) { %>
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>Error!</strong> Invalid Login
    </div>
    <% } %>
    <form method="post" action="/login">
        <legend>Login</legend>
        <label>Username:</label>
        <input type="text" placeholder="username" name="username"/>
        <label>Password:</label>
        <input type="password" placeholder="password" name="password"/>
        <br/>
        <label class="checkbox">
            <input type="checkbox"> Keep me logged in
        </label>
        <button type="submit" class="btn" style="margin-top: 12px">Login</button>
        <span class="help-block" style="margin-top: 12px">Not registered? Click <a href="/register">here</a> to register.</span>
    </form>
</div>